# .env.example
# Environment Configuration for LegacyParts AI

# Application Settings
APP_NAME=LegacyParts AI
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/legacyparts_db
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_PATH=./models/industrial_parts_classifier.pth
MODEL_TYPE=efficientnet_b0
NUM_CLASSES=17
CONFIDENCE_THRESHOLD=0.70

# Kaggle API (for dataset download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# AWS Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=legacyparts-uploads
AWS_REGION=us-east-1

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@legacypartsai.com

# Price Alert Configuration
PRICE_CHECK_INTERVAL=3600  # seconds (1 hour)
PRICE_ALERT_THRESHOLD=0.15  # 15% price drop

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://legacypartsai.com

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600  # 1 hour

# Feature Flags
ENABLE_AI_IDENTIFICATION=True
ENABLE_PREDICTIVE_PRICING=True
ENABLE_3D_PRINT_LIBRARY=True
ENABLE_VENDOR_API=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
